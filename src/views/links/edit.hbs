<div class="container p-4">
    <div class="row col-md-4 mx-auto">
        <div class="card">
            <div class="card-body">
                <form action="/links/edit/{{link.idlink}}" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control"  name="title" placeholder="Title" autofocus value="{{link.title}}">
                    </div>
                    <div class="form-group">
                        <input type="url" name="url" class="form-control" placeholder="URL" value="{{link.url}}">
                    </div>
                    <div class="form-group">
                        <textarea name="description" cols="2" rows="3" class="form-control"
                        placeholder="Description">{{link.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>